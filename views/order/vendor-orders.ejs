<% layout('layouts/boilerplate') -%>

<div class="container my-5">
  <h2 class="text-center mb-4">ğŸ“¦ Your Orders (As Vendor)</h2>

  <% if (orders.length === 0) { %>
    <p class="text-center">You haven't placed any orders yet.</p>
  <% } else { %>
    <% for (let i = 0; i < orders.length; i += 2) { %>
      <div class="row">
        <% for (let j = i; j < i + 2 && j < orders.length; j++) { 
             const order = orders[j]; %>
          <div class="col-md-6 mb-4">
            <div class="card h-100">
              <div class="card-header d-flex justify-content-between align-items-center">
                <span>ğŸ†” Order ID: <%= order._id %></span>
                <span>ğŸ—“ï¸ <%= order.createdAt.toDateString() %></span>
              </div>
              <div class="card-body">
                <p><strong>Supplier:</strong> <%= order.supplier.username %> (<%= order.supplier.email %>)</p>
                <p><strong>Status:</strong> <%= order.status %></p>
                <p><strong>Payment:</strong> <%= order.paymentStatus %></p>

                <h5 class="mt-3">ğŸ›ï¸ Products:</h5>
                <ul class="list-group">
                  <% order.products.forEach(item => { %>
                    <li class="list-group-item d-flex justify-content-between">
                      <div>
                        <strong><%= item.product.name %></strong> <br>
                        Quantity: <%= item.quantity %>
                      </div>
                      <span>â‚¹ <%= item.price.toFixed(2) %></span>
                    </li>
                  <% }) %>
                </ul>

                <div class="mt-3 text-end">
                  <strong>Total: â‚¹ <%= order.totalAmount.toFixed(2) %></strong>
                  <% if(order.paymentStatus === "Pending") {%>
                  <span>
                    <a href="/vendor/order/<%= order._id %>/pay" class="btn btn-sm btn-success ms-3">Pay Now</a>

                  </span>
                  <% }%>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  <% } %>
</div>
