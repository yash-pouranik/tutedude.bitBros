<% layout("layouts/boilerplate") -%>

<style>
  .cart-card {
    border-radius: 1rem;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s;
  }

  .cart-card:hover {
    transform: translateY(-5px);
  }

  .cart-card .card-body {
    padding: 1.5rem;
    background: linear-gradient(135deg, #f9f9f9, #eef2f3);
    border-radius: 1rem;
  }

  .remove-btn {
    background-color: #dc3545;
    color: white;
    border: none;
    padding: 0.4rem 0.9rem;
    border-radius: 6px;
    font-size: 0.9rem;
  }

  .remove-btn:hover {
    background-color: #c82333;
  }

  .checkout-btn {
    background-color: #28a745;
    color: white;
    padding: 0.7rem 1.5rem;
    font-size: 1.1rem;
    border: none;
    border-radius: 8px;
  }

  .checkout-btn:hover {
    background-color: #218838;
  }
</style>

<div class="container my-5">
  <h2 class="text-center mb-4 display-6 fw-bold text-success">ðŸ›’ Your Cart</h2>

  <% if (!cart || cart.items.length === 0) { %>
    <div class="alert alert-warning text-center">
      Your cart is empty.
    </div>
  <% } else { %>
    <div class="row g-4">
      <% let totalAmount = 0; %>
      <% cart.items.forEach(item => { 
           const product = item.productId;
           const subtotal = product.price * item.quantity;
           totalAmount += subtotal;
      %>
        <div class="col-md-6 col-lg-4">
          <div class="card cart-card">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <hr>
              <p><strong>Price:</strong> â‚¹<%= product.price %></p>
              <p><strong>Quantity:</strong> <%= item.quantity %></p>
              <p><strong>Total:</strong> â‚¹<%= subtotal %></p>
              <form action="/cart/remove/<%= product._id %>" method="POST">
                <button type="submit" class="remove-btn">Remove</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="text-center mt-5">
      <h4 class="mb-3 fw-semibold">ðŸ§¾ Total Amount: â‚¹<%= totalAmount %></h4>
      <form action="/place-order" method="POST">
        <input type="hidden" name="vendorId" value="<%= currUser._id %>">
        <input type="hidden" name="orderType" value="online"> <!-- or whatever default -->
        <button type="submit" class="checkout-btn">Proceed to Checkout</button>
    </form>

    </div>
  <% } %>
</div>
