<% layout('layouts/boilerplate') %>

<section class="shopping-page">
  <div class="container">

    <!-- ðŸ” Search Bar -->
    <div class="search-bar-wrapper">
      <input
        type="text"
        id="product-search"
        placeholder="ðŸ” Search for products..."
        onkeyup="filterProducts()"
      />
    </div>

    <!-- ðŸ§­ Filter Nav -->
    <nav class="top-filter-nav mt-4">
      <ul class="filter-nav-list">
        <li><a href="#" class="filter-link active" onclick="showSection('all')">ðŸ¥• All</a></li>
        <li><a href="#" class="filter-link" onclick="showSection('fresh')">ðŸŒ± Fresh</a></li>
        <li><a href="#" class="filter-link" onclick="showSection('packed')">ðŸ“¦ Packed</a></li>
      </ul>
    </nav>

    <!-- ðŸ“¦ All Products -->
    <div id="all-section" class="item-section">
      <h2 class="section-title">All Products</h2>
      <% if (allProducts.length === 0) { %>
        <p class="placeholder">No products to show yet.</p>
      <% } else { %>
        <div class="product-grid" id="all-products-list">
          <% allProducts.forEach(p => { %>
            <a href="/product/<%= p._id %>" class="product-card-link product-item" data-name="<%= p.name.toLowerCase() %>">
              <div class="product-card">
                <div class="product-img">
                  <img src="<%= p.imageUrl %>" alt="<%= p.name %>">
                </div>
                <div class="product-details">
                  <h3><%= p.name %></h3>
                  <p class="price">â‚¹<%= p.price %> per <%= p.unit %></p>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- ðŸ¥¬ Fresh Section -->
    <div id="fresh-section" class="item-section hidden">
      <h2 class="section-title">Fresh Products</h2>
      <div class="fresh-filter-buttons">
        <button onclick="filterFresh('all')" class="fresh-btn active">All</button>
        <button onclick="filterFresh('veggies')" class="fresh-btn">Veggies</button>
        <button onclick="filterFresh('dairy')" class="fresh-btn">Dairy</button>
      </div>
      <div class="product-grid">
        <% freshProducts.forEach(p => { %>
          <a href="/product/<%= p._id %>" class="product-card-link fresh-item <%= p.freshCategory %>">
            <div class="product-card">
              <div class="product-img">
                <img src="<%= p.imageUrl %>" alt="<%= p.name %>">
              </div>
              <div class="product-details">
                <h3><%= p.name %></h3>
                <p class="price">â‚¹<%= p.price %> per <%= p.unit %></p>
              </div>
            </div>
          </a>
        <% }) %>
      </div>
    </div>

    <!-- ðŸ“¦ Packed Section -->
    <div id="packed-section" class="item-section hidden">
      <h2 class="section-title">Packed Products</h2>
      <% if (packedProducts.length === 0) { %>
        <p class="placeholder">No packed products available yet.</p>
      <% } else { %>
        <div class="product-grid">
          <% packedProducts.forEach(p => { %>
            <a href="/product/<%= p._id %>" class="product-card-link">
              <div class="product-card">
                <div class="product-img">
                  <img src="<%= p.imageUrl %>" alt="<%= p.name %>">
                </div>
                <div class="product-details">
                  <h3><%= p.name %></h3>
                  <p class="price">â‚¹<%= p.price %> per <%= p.unit %></p>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
      <% } %>
    </div>

  </div>
</section>

<!-- Scripts -->
<script>
  function showSection(type) {
    const sections = {
      all: document.getElementById('all-section'),
      fresh: document.getElementById('fresh-section'),
      packed: document.getElementById('packed-section'),
    };

    Object.values(sections).forEach(section => section.classList.add('hidden'));
    sections[type].classList.remove('hidden');

    document.querySelectorAll('.filter-link').forEach(link => link.classList.remove('active'));
    event.target.classList.add('active');
  }

  function filterFresh(type) {
    const items = document.querySelectorAll(".fresh-item");
    const buttons = document.querySelectorAll(".fresh-btn");

    buttons.forEach(btn => btn.classList.remove("active"));
    event.target.classList.add("active");

    items.forEach(item => {
      item.style.display = (type === "all" || item.classList.contains(type)) ? "block" : "none";
    });
  }

  function filterProducts() {
    const input = document.getElementById("product-search").value.toLowerCase();

    // All Products
    document.querySelectorAll("#all-products-list .product-item").forEach(item => {
      const name = item.dataset.name;
      item.style.display = name.includes(input) ? "block" : "none";
    });

    // Fresh Products
    document.querySelectorAll("#fresh-section .fresh-item").forEach(item => {
      const name = item.querySelector("h3").innerText.toLowerCase();
      item.style.display = name.includes(input) ? "block" : "none";
    });

    // Packed Products
    document.querySelectorAll("#packed-section .product-card-link").forEach(item => {
      const name = item.querySelector("h3").innerText.toLowerCase();
      item.style.display = name.includes(input) ? "block" : "none";
    });
  }
</script>


<!-- Styles -->
<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(to bottom, #fffdf5, #fef6eb);
    margin: 0;
  }

  .shopping-page .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .search-bar-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  #product-search {
    width: 80%;
    max-width: 500px;
    padding: 10px 20px;
    font-size: 1rem;
    border: 2px solid #ffa94d;
    border-radius: 50px;
    outline: none;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    transition: 0.3s;
  }

  #product-search:focus {
    border-color: #ff922b;
    box-shadow: 0 5px 14px rgba(255, 146, 43, 0.3);
  }

  .top-filter-nav {
    display: flex;
    justify-content: center;
    margin-bottom: 30px;
  }

  .filter-nav-list {
    display: flex;
    gap: 15px;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
  }

  .filter-link {
    text-decoration: none;
    padding: 10px 22px;
    background: #f0f0f0;
    border-radius: 30px;
    color: #333;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.06);
  }

  .filter-link:hover {
    background-color: #ffe8b3;
    color: #e67e22;
  }

  .filter-link.active {
    background-color: #ffa94d;
    color: white;
    box-shadow: 0 6px 12px rgba(255, 153, 0, 0.3);
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 26px;
  }

  .product-card-link {
    text-decoration: none;
    color: inherit;
  }

  .product-card {
    background: #fff;
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.07);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 16px 30px rgba(0, 0, 0, 0.1);
  }

  .product-img img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-img img {
    transform: scale(1.06);
  }

  .product-details {
    padding: 15px 18px;
  }

  .product-details h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #222;
  }

  .price {
    color: #2b9348;
    font-weight: bold;
    font-size: 1.05rem;
  }

  .placeholder {
    color: #aaa;
    text-align: center;
    font-style: italic;
    margin-top: 1.5rem;
  }

  .hidden {
    display: none;
  }

  .fresh-filter-buttons {
    margin: 20px 0;
    text-align: center;
  }

  .fresh-btn {
    padding: 8px 18px;
    margin: 5px;
    border: none;
    border-radius: 25px;
    background: #88d498;
    color: white;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .fresh-btn:hover {
    background-color: #57cc99;
  }

  .fresh-btn.active {
    background-color: #2a9d8f;
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .product-grid {
      grid-template-columns: 1fr;
    }

    #product-search {
      width: 95%;
    }
  }
</style>
