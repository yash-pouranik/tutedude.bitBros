<% layout('layouts/boilerplate') %>

<section class="shopping-page">
  <div class="container">

    <!-- 🔍 Search Bar -->
    <div class="search-bar-container mb-4">
      <form  class="search-form">
        <input
          type="text"
          name="q"
          id="searchInput"
          placeholder="🔍 Search products..."
          class="search-input"
          required
        />
        <button type="submit" class="search-button">Search</button>
      </form>
    </div>

    <!-- 🧭 Filter Nav -->
    <nav class="top-filter-nav mt-4">
      <ul class="filter-nav-list">
        <li><a href="#" class="filter-link active" onclick="showSection('all')">🥕 All</a></li>
        <li><a href="#" class="filter-link" onclick="showSection('fresh')">🌱 Fresh</a></li>
        <li><a href="#" class="filter-link" onclick="showSection('packed')">📦 Packed</a></li>
      </ul>
    </nav>

    <!-- 📦 All Products -->
    <div id="all-section" class="item-section">
      <h2 class="section-title">All Products</h2>
      <% if (allProducts.length === 0) { %>
        <p class="placeholder">No products to show yet.</p>
      <% } else { %>
        <div class="product-grid" id="all-products-grid">
          <% allProducts.forEach(p => { %>
            <a href="/product/<%= p._id %>" class="product-card-link" data-name="<%= p.name.toLowerCase() %>">
              <div class="product-card">
                <div class="product-img">
                  <img src="<%= p.imageUrl %>" alt="<%= p.name %>">
                </div>
                <div class="product-details">
                  <h3><%= p.name %></h3>
                  <p class="price">₹<%= p.price %> per <%= p.unit %></p>
                  <% if (p.distance) { %>
                    <p>Distance: <%= p.distance %> km</p>
                  <% } else { %>
                    <p>Distance: N/A</p>
                  <% } %>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
        <p id="noResults" class="placeholder hidden">No matching products found.</p>
      <% } %>
    </div>

    <!-- 🥬 Fresh Section -->
    <div id="fresh-section" class="item-section hidden">
      <h2 class="section-title">Fresh Products</h2>
      <div class="fresh-filter-buttons">
        <button onclick="filterFresh('all')" class="fresh-btn active">All</button>
        <button onclick="filterFresh('veggies')" class="fresh-btn">Veggies</button>
        <button onclick="filterFresh('dairy')" class="fresh-btn">Dairy</button>
      </div>
      <div class="product-grid">
        <% freshProducts.forEach(p => { %>
          <a href="/product/<%= p._id %>" class="product-card-link fresh-item <%= p.freshCategory %>">
            <div class="product-card">
              <div class="product-img">
                <img src="<%= p.imageUrl %>" alt="<%= p.name %>">
              </div>
              <div class="product-details">
                <h3><%= p.name %></h3>
                <p class="price">₹<%= p.price %> per <%= p.unit %></p>
                  <% if (p.distance) { %>
                    <p>Distance: <%= p.distance %> km</p>
                  <% } else { %>
                    <p>Distance: N/A</p>
                  <% } %>
              </div>
            </div>
          </a>
        <% }) %>
      </div>
    </div>

    <!-- 📦 Packed Section -->
    <div id="packed-section" class="item-section hidden">
      <h2 class="section-title">Packed Products</h2>
      <% if (packedProducts.length === 0) { %>
        <p class="placeholder">No packed products available yet.</p>
      <% } else { %>
        <div class="product-grid">
          <% packedProducts.forEach(p => { %>
            <a href="/product/<%= p._id %>" class="product-card-link">
              <div class="product-card">
                <div class="product-img">
                  <img src="<%= p.imageUrl %>" alt="<%= p.name %>">
                </div>
                <div class="product-details">
                  <h3><%= p.name %></h3>
                  <p class="price">₹<%= p.price %> per <%= p.unit %></p>
                  <% if (p.distance) { %>
                    <p>Distance: <%= p.distance %> km</p>
                  <% } else { %>
                    <p>Distance: N/A</p>
                  <% } %>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
      <% } %>
    </div>

  </div>
</section>

<!-- ✅ LIVE SEARCH SCRIPT -->
<script>
  function showSection(type) {
    const sections = {
      all: document.getElementById('all-section'),
      fresh: document.getElementById('fresh-section'),
      packed: document.getElementById('packed-section'),
    };

    Object.values(sections).forEach(section => section.classList.add('hidden'));
    sections[type].classList.remove('hidden');

    document.querySelectorAll('.filter-link').forEach(link => link.classList.remove('active'));
    event.target.classList.add('active');
  }

  function filterFresh(type) {
    const items = document.querySelectorAll(".fresh-item");
    const buttons = document.querySelectorAll(".fresh-btn");

    buttons.forEach(btn => btn.classList.remove("active"));
    event.target.classList.add("active");

    items.forEach(item => {
      item.style.display = (type === "all" || item.classList.contains(type)) ? "block" : "none";
    });
  }

  // ✅ Live frontend search (All Products)
  const searchInput = document.getElementById("searchInput");
  const productCards = document.querySelectorAll("#all-products-grid .product-card-link");
  const noResults = document.getElementById("noResults");

  searchInput.addEventListener("input", function () {
    const query = this.value.toLowerCase().trim();
    let visibleCount = 0;

    productCards.forEach(card => {
      const name = card.getAttribute("data-name");
      const match = name.includes(query);
      card.style.display = match ? "block" : "none";
      if (match) visibleCount++;
    });

    noResults.classList.toggle("hidden", visibleCount !== 0);
  });
</script>


