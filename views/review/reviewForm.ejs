<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="card shadow p-4">
    <h3 class="mb-4 text-center">üìù Leave a Review for Order #<%= order._id %></h3>

    <form action="/orders/<%= order._id %>/review" method="POST">
      <div class="mb-3">
        <label class="form-label">Quality (1-5):</label>
        <input type="number" class="form-control" name="quality" min="1" max="5" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Delivery Speed (1-5):</label>
        <input type="number" class="form-control" name="deliverySpeed" min="1" max="5" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Communication (1-5):</label>
        <input type="number" class="form-control" name="communication" min="1" max="5" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Comments (optional):</label>
        <textarea class="form-control" name="comments" rows="3"></textarea>
      </div>

      <button type="submit" class="btn btn-primary w-100">Submit Review</button>
    </form>
  </div>
</div>
