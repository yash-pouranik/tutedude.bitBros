<% layout("layouts/boilerplate") %>

<style>
  .spin-container {
    height: 5rem;
    overflow: hidden;
    position: relative;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .spin-text {
    position: absolute;
    width: 100%;
    text-align: center;
    font-size: 3rem;
    line-height: 1.2;
    opacity: 0;
    font-weight: 900;
    transform: translateY(100%);
    transition: transform 0.8s ease, opacity 0.8s ease;
  }

  .spin-text.show {
    opacity: 1;
    transform: translateY(0);
  }

  .spin-text.hide {
    opacity: 0;
    transform: translateY(-100%);
  }

  @media (max-width: 640px) {
    .spin-text {
      font-size: 2rem;
    }

    .spin-container {
      height: 5rem;
    }
  }
</style>

<section class="hero py-28 bg-cover bg-center text-center relative" style="background-image: url('/images/OIP.jpeg');">
  <div class="absolute inset-0 bg-white bg-opacity-80 backdrop-blur-sm"></div>

  <div class="hero-content max-w-4xl mx-auto px-6 relative z-10">
