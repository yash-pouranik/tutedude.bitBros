<% layout('layouts/boilerplate') %>

<section class="shopping-page">
  <div class="container">

    <!-- ðŸ§­ Grocery Themed Filter Nav -->
    <nav class="top-filter-nav mt-3">
      <ul class="filter-nav-list">
        <li><a href="#" class="filter-link active" onclick="showSection('all')">ðŸ¥• All</a></li>
        <li><a href="#" class="filter-link" onclick="showSection('fresh')">ðŸŒ± Fresh</a></li>
        <li><a href="#" class="filter-link" onclick="showSection('packed')">ðŸ“¦ Packed</a></li>
      </ul>
    </nav>

    <!-- ðŸ“¦ All Items Section -->
    <div id="all-section" class="item-section">
      <h2>All Products</h2>
      <p class="placeholder">No products to show yet.</p>
    </div>

    <!-- ðŸ¥¬ Fresh Section -->
    <div id="fresh-section" class="item-section hidden">
    <h2>Fresh Products</h2>

    <div class="fresh-dropdowns">
    <div class="fresh-dropdown">
      <button class="dropbtn">Veggies</button>
      <div class="dropdown-content">
        <p class="placeholder">No veggies available yet.</p>
    </div>
    </div>

    <div class="fresh-dropdown">
      <button class="dropbtn">Dairy</button>
      <div class="dropdown-content">
        <p class="placeholder">No dairy products available yet.</p>
    </div>
    </div>
    </div>
    </div>


    <!-- ðŸ“¦ Packed Section -->
    <div id="packed-section" class="item-section hidden">
      <h2>Packed Products</h2>
      <p class="placeholder">No packed products available yet.</p>
    </div>

  </div>
</section>

<script>
  function showSection(type) {
    const sections = {
      all: document.getElementById('all-section'),
      fresh: document.getElementById('fresh-section'),
      packed: document.getElementById('packed-section'),
    };

    Object.values(sections).forEach(section => section.classList.add('hidden'));
    sections[type].classList.remove('hidden');

    document.querySelectorAll('.filter-link').forEach(link => link.classList.remove('active'));
    event.target.classList.add('active');
  }
</script>
